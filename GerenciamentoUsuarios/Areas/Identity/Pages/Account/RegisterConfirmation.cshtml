@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    A verificação de contas por envio de email ainda não está disponível. 
    Em caráter de apresentação, <a id="confirm-link" href="@Model.EmailConfirmationUrl">clique aqui para confirmar o registro.</a>
</p>
    }
    else
    {
<p>
        Por favor, verifique seu email para a confirmação da conta.
</p>
    }
}
